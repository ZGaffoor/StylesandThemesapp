<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/result2"
            android:layout_width="@dimen/textViewWidth"
            android:layout_height="@dimen/textViewHeight"
            android:layout_below="@id/gamble"
            android:layout_marginLeft="@dimen/editMarginLeft"
            android:layout_marginRight="@dimen/editMarginRight"
            android:layout_marginTop="40dp"
            android:hint="Money Left"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingTop="@dimen/padding"
            android:paddingRight="@dimen/paddingRight"
            android:paddingBottom="@dimen/padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/gamble"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/editTextHeight"
            android:layout_below="@id/result"
            android:layout_marginStart="120dp"
            android:layout_marginTop="80dp"
            android:onClick="gamble"
            android:text="Click to Gamble"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginLeft="@dimen/editMarginLeft"
            android:layout_marginTop="48dp"
            android:layout_marginRight="@dimen/editMarginRight"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingRight="@dimen/paddingRight"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/editTextHeight"
            android:layout_below="@id/nameText"
            android:layout_marginStart="120dp"
            android:layout_marginTop="@dimen/topMargin"
            android:onClick="moneyGen"
            android:text="Click me for Money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result"
            android:layout_width="@dimen/textViewWidth"
            android:layout_height="@dimen/textViewHeight"
            android:layout_below="@id/button"
            android:layout_marginLeft="@dimen/editMarginLeft"
            android:layout_marginRight="@dimen/editMarginRight"
            android:layout_marginTop="40dp"
            android:hint="Money Genned"
            android:paddingLeft="@dimen/paddingLeft"
            android:paddingTop="@dimen/padding"
            android:paddingRight="@dimen/paddingRight"
            android:paddingBottom="@dimen/padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    ></RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>